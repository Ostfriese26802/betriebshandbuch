<p id="notice"><%= notice %></p>

<h1>Kunden</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kürzel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kundes.each do |kunde| %>
      <tr>
        <td><%= kunde.name %></td>
        <td><%= kunde.kuerzel %></td>
        <td><%= link_to 'Anzeigen', kunde %></td>
        <td><%= link_to 'Bearbeiten', edit_kunde_path(kunde) %></td>
        <td><%= link_to 'Löschen', kunde, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Kunde', new_kunde_path %>

<p id="notice"><%= notice %></p>

<h1>Kundes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kuerzel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kundes.each do |kunde| %>
      <tr>
        <td><%= kunde.name %></td>
        <td><%= kunde.kuerzel %></td>
        <td><%= link_to 'Show', kunde %></td>
        <td><%= link_to 'Edit', edit_kunde_path(kunde) %></td>
        <td><%= link_to 'Destroy', kunde, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kunde', new_kunde_path %>
